{
  "_comment": "Default configuration - all parameters with their default values",
  "_description": "Use this as reference when creating custom experiments. Only override the parameters you want to change.",

  "experiment_name": "default_experiment",
  "description": "Default configuration showing all available parameters",

  "data_prep": {
    "dataset": "WizardLMTeam/WizardLM_evol_instruct_70k",
    "letters": "A",
    "num_train": 10000,
    "num_eval": 500,
    "seed": 42
  },

  "training": {
    "model_name": "allenai/OLMo-2-0425-1B-DPO",
    "tokenizer_name": "allenai/OLMo-2-0425-1B-DPO",
    "num_train_epochs": 3,
    "learning_rate": 2e-5,
    "per_device_train_batch_size": 4,
    "gradient_accumulation_steps": 4,
    "max_seq_length": 2048,
    "warmup_ratio": 0.03,
    "weight_decay": 0.01,
    "use_flash_attn": false
  },

  "evaluation": {
    "batch_size": 8,
    "max_new_tokens": 512,
    "temperature": 0.7,
    "top_p": 0.9,
    "repetition_penalty": 1.1
  }
}
